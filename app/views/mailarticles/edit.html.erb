<fieldset>
<h1>New Mail Article</h1>
<%= form_for :mailarticle, url: mailarticle_update_path, method: 'post' do |f| %>
    <p>
      <%= hidden_field_tag(:m_id, @Mailarticle.id) %>
      <%= f.label :title %><br>
      <%= f.text_field :title, value: @Mailarticle.title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, value: @Mailarticle.text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', mailarticles_path %>
</fieldset>