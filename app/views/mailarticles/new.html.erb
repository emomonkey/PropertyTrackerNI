<fieldset>
<h1>New Mail Article</h1>
<%= form_for :mailarticle, url: mailarticle_path, method: 'post' do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', mailarticles_path %>
</fieldset>